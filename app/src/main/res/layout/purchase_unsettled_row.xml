<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/mainLinear"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <CheckBox
            android:id="@+id/unsettled_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/aluminum"
            android:layout_alignParentLeft="true"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Invoice"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:id="@+id/unsettled_invoice"
            android:layout_alignTop="@+id/rupee"
            android:layout_toRightOf="@+id/unsettled_checkbox"
            android:layout_toEndOf="@+id/unsettled_checkbox" />

        <TextView
            android:id="@+id/rupee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹"
            android:textColor="@color/red"
            android:textStyle="normal"
            android:textSize="20dp"
            android:layout_alignBottom="@+id/unsettled_checkbox"
            android:layout_toLeftOf="@+id/unsettled_amount"
            android:layout_toStartOf="@+id/unsettled_amount" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="amount"
            android:paddingRight="5dp"
            android:textColor="@color/red"
            android:layout_alignParentRight="true"
            android:textSize="25dp"
            android:id="@+id/unsettled_amount"/>

        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/iron"
        android:layout_height="2dp" />

</LinearLayout>